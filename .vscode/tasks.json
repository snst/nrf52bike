{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "PlatformIO",
            "task": "Pre-Debug",
            "problemMatcher": [
                "$platformio"
            ]
        }
        ,
        {
            "label": "Build tests",
            "type": "shell",
            "command": "reset && cmake .. && make && ./biketest",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/test/build"
        },
        }
    ]
}